@model Commerce.Web.Models.CouponDto

@{
    ViewData["Title"] = "Delete Coupon";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Delete Coupon</h1>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="CouponDelete" method="post">
            <input type="hidden" asp-for="CouponId" />

            <div class="mb-3">
                <label class="form-label">Coupon Code</label>
                <input type="text" class="form-control" asp-for="CouponCode" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Discount Amount</label>
                <input type="text" class="form-control" asp-for="DiscountAmount" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Minimum Amount</label>
                <input type="text" class="form-control" asp-for="MinAmount" readonly />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="CouponIndex" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
